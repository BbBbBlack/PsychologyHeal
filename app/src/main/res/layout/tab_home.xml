<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                        <com.lapism.searchview.SearchView
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            />

                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/convenientBanner"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:canLoop="true"
                        />
                        <!--精彩专栏题头-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/border"
                            >

                                <TextView
                                    android:text="@string/brilliantColumn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorAccent"/>

                                <TextView
                                    android:text="@string/more"
                                    android:id="@+id/brilliantColumnMore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorAccent"/>

                        </LinearLayout>
                        <!--精彩专栏内容-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="248dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:gravity="center_vertical">
                                        <com.example.sukurax.psychologyheal.XCRoundImageView
                                            android:id="@+id/brilliantColumnPic"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/pictest"
                                            android:layout_marginLeft="16dp"/>

                                        <TextView
                                            android:text="zuoyemingzi"
                                            android:textSize="16sp"
                                            android:textColor="#000000"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantColumnName"
                                            android:layout_marginLeft="16dp"/>

                                        <TextView
                                            android:text="3小时前"
                                            android:textSize="16sp"
                                            android:textColor="#747474"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantColumnTime"
                                            android:layout_marginLeft="16dp"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="192dp"
                                    android:gravity="center_vertical">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="0dp"
                                            android:layout_weight="0.5"
                                            android:layout_height="160dp"
                                            android:layout_marginLeft="16dp"
                                            >
                                                <TextView
                                                    android:text="从一个角度看生活"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/brilliantColumnTitle"
                                                    android:textSize="24sp"
                                                    android:textColor="#000000"
                                                    />

                                                <TextView
                                                    android:text="以填满整个ImageView为目的，将原图的中心对准ImageView的中心，等比例放大原图，直到填满ImageView为止（指的是ImageView的宽和高都要填满），原图超过ImageView的部分作裁剪处理。"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/brilliantColumnContent"
                                                    android:layout_marginTop="16dp"
                                                    android:textSize="14sp"
                                                    android:textColor="#747474"
                                                    android:ellipsize="end"
                                                    android:maxLines="4"  />
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="160dp"
                                            android:layout_weight="0.5"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/rollviewtest"
                                            android:id="@+id/imageView"
                                            android:layout_marginRight="16dp"
                                            />
                                </LinearLayout>



                        </LinearLayout>
                        <!--精彩专栏底部-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical">

                                <TextView
                                    android:text="生活"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:padding="5dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/roundborder"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/eye"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123555"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/gray_heart"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1235"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>

                        </LinearLayout>
                        <!--精选圈子题头-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/border"
                            >

                                <TextView
                                    android:text="@string/brilliantCircle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorAccent"/>

                                <TextView
                                    android:text="@string/more"
                                    android:id="@+id/brilliantCircleMore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorAccent"/>

                        </LinearLayout>
                        <!--精选圈子内容-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="88dp">
                                <!--精选圈子标题-->
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:gravity="center_vertical">

                                        <TextView
                                            android:text="我的高中同学这样对我阿萨德"
                                            android:textSize="16sp"
                                            android:textColor="#000000"
                                            android:ellipsize="end"
                                            android:maxEms="9"
                                            android:maxLines="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantCircleName"
                                            android:layout_marginLeft="16dp"/>

                                        <TextView
                                            android:text="昨天 13：32"
                                            android:textSize="16sp"
                                            android:textColor="#747474"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantCircleTime"
                                            android:layout_marginLeft="16dp"/>


                                </LinearLayout>
                                <!--精选圈子文字内容-->
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:gravity="center_vertical">

                                        <TextView
                                            android:text="TextView最大字数长度经常需要控制，如用来显示昵称，昵称的长度是不固定的，如果TextView后面有其他控件，需要注意是否会被TextView控件挤掉
xml中属性设置："
                                            android:textSize="14sp"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="#747474"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantCircleContent"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"/>

                                </LinearLayout>


                        </LinearLayout>
                        <!--精选圈子图片-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="160dp"
                                    android:src="@drawable/rollviewtest"
                                    android:id="@+id/brilliantCirclePic1"
                                    android:layout_weight="0.5"
                                    android:layout_marginLeft="16dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="160dp"
                                    android:src="@drawable/rollviewtest"
                                    android:id="@+id/brilliantCirclePic2"
                                    android:layout_weight="0.5"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginLeft="8dp"/>
                        </LinearLayout>
                        <!--精选圈子底部-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical">

                                <TextView
                                    android:text="社交"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:padding="5dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/roundborder"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/eye"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123555"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/gray_heart"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1235"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>

                        </LinearLayout>
                        <!--精选文章题头-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/border"
                            >

                                <TextView
                                    android:text="@string/brilliantArticle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorAccent"/>

                                <TextView
                                    android:text="@string/more"
                                    android:id="@+id/brilliantArticleMore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorAccent"/>

                        </LinearLayout>
                        <!--精选文章标题-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:gravity="center_vertical">

                                <TextView
                                    android:text="如何理解上司的隐藏话语"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/brilliantArticleName"
                                    android:layout_marginLeft="16dp"/>

                                <TextView
                                    android:text="昨天 13：32"
                                    android:textSize="14sp"
                                    android:textColor="#747474"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/brilliantArticleTime"
                                    android:layout_marginLeft="16dp"/>


                        </LinearLayout>
                        <!--精选文章图片-->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="192dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rollviewtest"
                            android:id="@+id/brilliantArticlePic" />
                        <!--精选文章内容-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:gravity="center_vertical">

                                <TextView
                                    android:text="如何理解上司的隐藏话语如何理解上司的隐藏话语如何理解上司的隐藏话语如何理解上司的隐藏话语如何理解上司的隐藏话语如何理解上司的隐藏话语"
                                    android:textSize="16sp"
                                    android:textColor="#747474"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/brilliantArticleContent"
                                    android:layout_marginLeft="16dp"/>

                        </LinearLayout>

                        <!--精选文章底部-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical">

                                <TextView
                                    android:text="工作"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:padding="5dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/roundborder"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/eye"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123555"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/gray_heart"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1235"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>

                        </LinearLayout>
                </LinearLayout>
        </ScrollView>


</LinearLayout>