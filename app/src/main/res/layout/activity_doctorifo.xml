<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/backtoolbar"
                android:elevation="6dp"
                >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/doctorIfoBackBtn"
                        android:src="@drawable/arrowback"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorIfoChinese"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>
            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <com.example.sukurax.psychologyheal.XCRoundImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/doctorpic"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="吴雄博"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="@string/strengthChinese"/>
                        <TextView
                            android:text="亲情"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:background="@drawable/roundborder"/>
                        <TextView
                            android:text="恋爱"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:background="@drawable/roundborder"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#747474"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:text="从事心理咨询和心理治疗、心理学教学工作18年，有着丰富的临床经验，尤其擅长学生心理问题、婚恋家庭问题、人际关系问题、发展问题的心理咨询以及神经症的心理治疗。"
                            android:id="@+id/textView" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:text="@string/followChinese"
                            android:id="@+id/followBtn"
                            android:background="@drawable/shape_corner_72a8e7"
                            android:textColor="@color/avoscloud_feedback_white"
                            android:textSize="20sp"
                            android:letterSpacing="0.5"
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginRight="4dp"
                            android:elevation="3dp"
                            />
                        <Button
                            android:text="@string/pchatChinese"
                            android:id="@+id/privateChat"
                            android:layout_weight="0.5"
                            android:background="@drawable/shape_corner_e97684"
                            android:textColor="@color/avoscloud_feedback_white"
                            android:textSize="20sp"
                            android:letterSpacing="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginLeft="4dp"
                            android:elevation="3dp"
                            />
                    </LinearLayout>
                    <Button
                        android:text="@string/orderChinese"
                        android:id="@+id/orderBtn"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_corner"
                        android:textColor="@color/avoscloud_feedback_white"
                        android:textSize="20sp"
                        android:letterSpacing="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:elevation="3dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--专栏题头-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:text="@string/column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView2" />

                <TextView
                    android:text="@string/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>
            <!--专栏内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--精彩专栏内容-->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:gravity="center_vertical">
                                    <com.example.sukurax.psychologyheal.XCRoundImageView
                                        android:id="@+id/brilliantColumnPic"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/doctorpic"
                                        android:layout_marginLeft="16dp"/>

                                    <TextView
                                        android:text="吴雄博"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/brilliantColumnName"
                                        android:layout_marginLeft="16dp"/>

                                    <TextView
                                        android:text="3小时前"
                                        android:textSize="16sp"
                                        android:textColor="#747474"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/brilliantColumnTime"
                                        android:layout_marginLeft="16dp"/>


                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="192dp"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.5"
                                        android:layout_height="160dp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="4dp"
                                        >
                                        <TextView
                                            android:text="从一个角度看生活"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantColumnTitle"
                                            android:textSize="24sp"
                                            android:textColor="#000000"
                                            />

                                        <TextView
                                            android:text="俗话说的好，人生十不如意八九。感情上，职场上，亲情上，总能遇到大大小小的挫折，其实，很多这种挫折都是由于人与人之间的不理解引起的"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/brilliantColumnContent"
                                            android:layout_marginTop="16dp"
                                            android:textSize="14sp"
                                            android:textColor="#747474"
                                            android:ellipsize="end"
                                            android:maxLines="4"  />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="160dp"
                                        android:layout_weight="0.5"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/rollviewpic3"
                                        android:id="@+id/imageView"
                                        android:layout_marginRight="16dp"
                                        android:layout_marginLeft="4dp"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                        <!--精彩专栏底部-->
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:gravity="center_vertical">



                                <TextView
                                    android:text="生活"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:padding="5dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/roundborder"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/eye"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="13555"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/gray_heart"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1235"
                                    android:textSize="16sp"
                                    android:textColor="#BDBDBD"
                                    android:layout_marginLeft="4dp"/>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!--评论题头-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:text="@string/commentChinese"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:text="@string/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="88dp">

                        <com.example.sukurax.psychologyheal.XCRoundImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pictest"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="安连华"
                                android:textSize="16sp"
                                android:textColor="#000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="考研焦虑，对未来迷茫，我平时是一个非常乐观的女孩，可是考研期间我非常压抑。我非常非常想要去广州读研，初试的成绩已经下来，但是学校分数线要到三月中旬才下来。"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="#747474"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="88dp">

                        <com.example.sukurax.psychologyheal.XCRoundImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pictest"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="张小飞"
                                android:textSize="16sp"
                                android:textColor="#000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="孩子玩游戏不学习怎么办？"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="#747474"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="88dp">

                        <com.example.sukurax.psychologyheal.XCRoundImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pictest"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="王国华"
                                android:textSize="16sp"
                                android:textColor="#000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我家儿子18岁了，人非常懒，怎么让他变得勤快？"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="#747474"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>